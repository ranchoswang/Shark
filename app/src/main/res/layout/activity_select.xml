<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            >
        </ImageView>

        <ImageView
            android:id="@+id/confirmation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

>
        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/spade"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginBottom="45dp"
                />

            <ImageView
                android:id="@+id/heart"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginBottom="45dp"
                />

            <ImageView
                android:id="@+id/club"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginBottom="45dp"
                />

            <ImageView
                android:id="@+id/diamond"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginBottom="45dp"
                />
            <ImageView
                android:id="@+id/question_left"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginBottom="45dp"

                />




        </LinearLayout>


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        >

        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="45dp"
        >


        <ImageView
            android:id="@+id/number_02"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/number_03"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/number_04"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>




        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            >


            <ImageView
                android:id="@+id/number_05"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/number_06"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:id="@+id/number_07"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            >


            <ImageView
                android:id="@+id/number_08"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:id="@+id/number_09"
                android:layout_height="50dp"
